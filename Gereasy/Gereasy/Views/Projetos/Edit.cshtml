@model Gereasy.Models.Projetos

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Projeto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCriacao" class="control-label"></label>
                @* o ToString permite colocar o "value" do date picker, de forma a que o input tenha a data já preenchida com a atual *@
                <input asp-for="DataCriacao" class="form-control" type="date" value="@Model.DataCriacao.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevista" class="control-label"></label>
                <input asp-for="DataPrevista" class="form-control" type="date" value="@Model.DataPrevista.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="DataPrevista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" type="date" value="@Model.DataInicio.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" type="date" value="@Model.DataFim.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteFK" class="control-label"></label>
                <select asp-for="ClienteFK" class="form-control" asp-items="ViewBag.ClienteFK"></select>
                <span asp-validation-for="ClienteFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CriadorFK" class="control-label"></label>
                <select asp-for="CriadorFK" class="form-control" asp-items="ViewBag.CriadorFK"></select>
                <span asp-validation-for="CriadorFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
