@model Gereasy.Models.Tarefas

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Criar</h1>

<h4>Tarefa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCriacao" class="control-label"></label>
                <input asp-for="DataCriacao" class="form-control" type="date" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLimite" class="control-label"></label>
                <input asp-for="DataLimite" class="form-control" type="date" />
                <span asp-validation-for="DataLimite" class="text-danger"></span>
            </div>
            @* Todas as tarefas começam como "pendentes" *@
            <div class="form-group">
                <input asp-for="Estado" class="form-control" value="Pendente" hidden />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prioridade" class="control-label"></label>
                <select asp-for="Prioridade" class="form-control">
                    @* Os parâmetros "selected disabled hidden" permitem ter um select com as seguintes características:
                        Possui uma opção pré-preenchida, que serve como mensagem para o utilizador escolher uma opção;
                        Esta opção não pode ser escolhida após o utilizador selecionar uma das opções;
                        Esta opção não tem valor, como tal, caso o utilzador não selecione nenhuma dá erro
                    *@
                    <option selected disabled hidden>Selecione a prioridade</option>
                    <option value="Baixa">Baixa</option>
                    <option value="Média">Média</option>
                    <option value="Alta">Alta</option>
                </select>
                <span asp-validation-for="Prioridade" class="text-danger"></span>
            </div>
            @* Todas as tarefas começam sem TempoDedicado *@
            <div class="form-group">
                <input asp-for="TempoDedicadoTimeSpan" class="form-control" type="time" value="00:00" hidden />
                <span asp-validation-for="TempoDedicadoTimeSpan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjetoFK" class="control-label"></label>
                <select asp-for="ProjetoFK" class="form-control" asp-items="ViewBag.ProjetoFK">
                    <option selected disabled hidden>Selecione o Projeto</option>
                </select>
                <span asp-validation-for="ColaboradorFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorFK" class="control-label"></label>
                <select asp-for="ColaboradorFK" class="form-control" asp-items="ViewBag.ColaboradorFK">
                    <option selected disabled hidden>Selecione o Colaborador</option>
                </select>
                <span asp-validation-for="ColaboradorFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div>
    <a asp-action="Index">Índice</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
